{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "./__build__",
    "rootDir": ".",
    "noStrictGenericChecks": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es6"]
  },
  "exclude": ["__dist__", "__build__"]
}
