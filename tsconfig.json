{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "rootDir": "./src",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es6"]
  },
  "exclude": ["__dist__", "__build__"]
}
