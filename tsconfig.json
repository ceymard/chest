{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es6", "ESNext"]
  },
  "exclude": ["__dist__", "__build__", "lib"]
}
