{
  "name": "@salesway/docker-tools",
  "version": "0.4.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "bin": {
    "chest": "lib/chest.js",
    "dps": "lib/dps.js"
  },
  "scripts": {
    "build:chest": "esbuild --minify --bundle --outfile=lib/chest.js --platform=node src/chest.ts --external:ssh2 --external:cpu-features",
    "build:dps": "esbuild --minify --bundle --outfile=lib/dps.js --platform=node src/dps.ts --external:ssh2 --external:cpu-features",
    "build": "mkdir -p lib ; npm run build:chest ; npm run build:dps ",
    "watch": "tsc -w | wtsc npm run build"
  },
  "devDependencies": {
    "@salesway/scotty": "^0.1.1",
    "@types/colors": "^1.2.1",
    "@types/command-line-args": "^5.0.0",
    "@types/dockerode": "^2.5.9",
    "@types/event-stream": "^4.0.5",
    "@types/node": "^18.11.2",
    "@types/stream-json": "^1.7.7",
    "chalk": "^5.3.0",
    "cmd-ts": "^0.13.0",
    "dockerode": "^4.0.2",
    "esbuild": "^0.15.11",
    "event-stream": "^4.0.1",
    "smol-toml": "^1.2.1",
    "stream-json": "^1.8.0",
    "typescript": "^4.8.4",
    "wtsc": "^0.1.2"
  },
  "dependencies": {
    "cpu-features": "^0.0.10",
    "ssh2": "^1.15.0"
  }
}
